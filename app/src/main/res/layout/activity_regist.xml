<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E35EC"
    android:backgroundTintMode="screen"
    tools:context=".Regist">

    <EditText
        android:id="@+id/FullNameTxt"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#121111"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#EDE8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccp" />

    <EditText
        android:id="@+id/EmailTxt"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#121111"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#EDE8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FullNameTxt" />

    <Button
        android:id="@+id/RegisterBtn"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneTxt" />

    <TextView
        android:id="@+id/Loggedin"
        android:layout_width="234dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:onClick="RedirectLogin"
        android:text="Already have account ? Sign-in here"
        android:textColor="#FDC539"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterBtn" />


    <ProgressBar
        android:id="@+id/ProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="66dp"
        android:layout_height="58dp"

        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Loggedin" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Register"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/PasswordTxt"
        android:layout_width="271dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:background="#100F0F"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailTxt" />

    <EditText
        android:id="@+id/OtpTxt"
        android:layout_width="243dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        android:ems="10"
        android:hint="ENTER OTP"
        android:inputType="number"
        android:textColorHint="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBar"
        app:layout_constraintVertical_bias="0.139" />

    <TextView
        android:id="@+id/ResendOtpBtn"
        android:layout_width="67dp"
        android:layout_height="22dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="116dp"
        android:background="#69A138"
        android:text="RESEND"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/OtpTxt" />

    <com.rilixtech.widget.countrycodepicker.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/PhoneTxt"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="#121111"
        android:ems="10"
        android:hint="Phone"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#EDE8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>